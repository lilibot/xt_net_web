<!DOCTYPE html>
<html>
<head>
    <title>Users and awards</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <a class="navbar-brand" href="~/Users/ShowUsers">UersAndAwards</a>
            <ul class="navbar-nav">
                @if (User.IsInRole("Admin"))
                {
                    <li class="navbar-brand"><a class="nav-link" href="~/Users/ShowUsers">Show users</a></li>
                    <li class="navbar-brand"><a class="nav-link" href="~/Users/AddUser">Add user</a></li>
                    <li class="navbar-brand"><a class="nav-link" href="~/Awards/ShowAwards">Show awards</a></li>
                    <li class="navbar-brand"><a class="nav-link" href="~/Awards/AddAward">Add award</a></li>
                    <li class="navbar-brand"><a class="nav-link" href="~/Accounts/ShowAccounts">Admin accounts</a></li>

                }
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="text-right"> <a class="btn btn-outline-light" href="~/Auth/Logout.cshtml" title="" style="font-size:large">User: @User.Identity.Name | Sign out</a></div>
            }
            else
            {
                <div class="text-right"><a class="btn btn-outline-light" href="~/Auth/Login" style="font-size:large"> Guest. Sign in</a></div>

                <div class="text-right"> <a class="btn btn-outline-light" href="~/Auth/Registration" style="font-size:large"> Registration</a></div>
            }

        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-3.4.1.slim.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>